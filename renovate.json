{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": ["develop"],
  "labels": ["dependencies"],
  "schedule": ["before 9am on monday"],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "matchManagers": ["gradle"],
      "labels": ["dependencies", "gradle"]
    },
    {
      "matchManagers": ["github-actions"],
      "labels": ["dependencies", "github-actions"]
    },
    {
      "description": "Fabric dependencies",
      "matchPackagePatterns": ["^net\\.fabricmc"],
      "registryUrls": ["https://maven.fabricmc.net/", "https://repo.maven.apache.org/maven2/"],
      "groupName": "Fabric dependencies"
    },
    {
      "description": "Fabric API",
      "matchPackagePatterns": ["^net\\.fabricmc\\.fabric-api"],
      "registryUrls": ["https://maven.fabricmc.net/", "https://repo.maven.apache.org/maven2/"],
      "groupName": "Fabric dependencies"
    },
    {
      "description": "Forge dependencies",
      "matchPackagePatterns": ["^net\\.minecraftforge"],
      "registryUrls": ["https://maven.minecraftforge.net/", "https://repo.maven.apache.org/maven2/"],
      "groupName": "Forge dependencies"
    },
    {
      "description": "NeoForge dependencies",
      "matchPackagePatterns": ["^net\\.neoforged"],
      "registryUrls": ["https://maven.neoforged.net/releases/", "https://repo.maven.apache.org/maven2/"],
      "groupName": "NeoForge dependencies"
    },
    {
      "description": "Spigot dependencies",
      "matchPackagePatterns": ["^org\\.spigotmc"],
      "registryUrls": ["https://hub.spigotmc.org/nexus/content/repositories/snapshots/", "https://repo.maven.apache.org/maven2/"],
      "groupName": "Spigot dependencies"
    },
    {
      "description": "Minecraft (Mojang)",
      "matchPackagePatterns": ["^com\\.mojang"],
      "registryUrls": ["https://libraries.minecraft.net/", "https://repo.maven.apache.org/maven2/"],
      "groupName": "Minecraft dependencies"
    },
    {
      "description": "Group all test dependencies",
      "matchPackagePatterns": ["^org\\.junit", "^org\\.mockito"],
      "groupName": "Test dependencies"
    }
  ],
  "gradle": {
    "fileMatch": [
      "(^|/)build\\.gradle\\.kts$",
      "(^|/)settings\\.gradle\\.kts$",
      "(^|/)gradle\\.properties$",
      "(^|/)gradle/libs\\.versions\\.toml$"
    ]
  }
}

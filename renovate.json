{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": ["develop"],
  "labels": ["dependencies"],
  "schedule": ["before 9am on monday"],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 5,
  "hostRules": [
    {
      "matchHost": "maven.fabricmc.net",
      "description": "FabricMC Maven"
    },
    {
      "matchHost": "maven.minecraftforge.net",
      "description": "Forge Maven"
    },
    {
      "matchHost": "maven.neoforged.net",
      "description": "NeoForge Maven"
    },
    {
      "matchHost": "hub.spigotmc.org",
      "description": "Spigot Maven"
    },
    {
      "matchHost": "libraries.minecraft.net",
      "description": "Minecraft Libraries"
    }
  ],
  "packageRules": [
    {
      "matchCategories": ["java"],
      "labels": ["dependencies", "gradle"]
    },
    {
      "matchCategories": ["ci"],
      "labels": ["dependencies", "github-actions"]
    },
    {
      "description": "Minecraft (Mojang) - not available via Maven, managed by mod loaders",
      "matchPackageNames": ["/^com\\.mojang/"],
      "enabled": false
    },
    {
      "description": "Fabric dependencies",
      "matchPackageNames": ["/^net\\.fabricmc/"],
      "registryUrls": [
        "https://maven.fabricmc.net/",
        "https://repo.maven.apache.org/maven2/"
      ],
      "groupName": "Fabric dependencies"
    },
    {
      "description": "Forge dependencies and plugins",
      "matchPackageNames": ["/^net\\.minecraftforge/"],
      "registryUrls": [
        "https://maven.minecraftforge.net/",
        "https://repo.maven.apache.org/maven2/"
      ],
      "groupName": "Forge dependencies"
    },
    {
      "description": "NeoForge dependencies",
      "matchPackageNames": ["/^net\\.neoforged/"],
      "registryUrls": [
        "https://maven.neoforged.net/releases/",
        "https://repo.maven.apache.org/maven2/"
      ],
      "groupName": "NeoForge dependencies"
    },
    {
      "description": "Spigot dependencies",
      "matchPackageNames": ["/^org\\.spigotmc/"],
      "registryUrls": [
        "https://hub.spigotmc.org/nexus/content/repositories/snapshots/",
        "https://repo.maven.apache.org/maven2/"
      ],
      "groupName": "Spigot dependencies"
    },
    {
      "description": "Fabric Loom plugin",
      "matchPackageNames": ["/^fabric-loom/"],
      "registryUrls": [
        "https://maven.fabricmc.net/",
        "https://plugins.gradle.org/m2/"
      ],
      "groupName": "Fabric Loom"
    },
    {
      "description": "JaCoCo plugin - ignore (managed by Gradle)",
      "matchPackageNames": ["/^org\\.jacoco/"],
      "enabled": false
    },
    {
      "description": "Group all test dependencies",
      "matchPackageNames": ["/^org\\.junit/", "/^org\\.mockito/"],
      "registryUrls": ["https://repo.maven.apache.org/maven2/"],
      "groupName": "Test dependencies"
    }
  ],
  "gradle": {
    "fileMatch": [
      "(^|/)build\\.gradle\\.kts$",
      "(^|/)settings\\.gradle\\.kts$",
      "(^|/)gradle\\.properties$",
      "(^|/)gradle/libs\\.versions\\.toml$"
    ]
  }
}
